<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
      >
        <ImageView
            android:id="@+id/imm"
android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:textAlignment="center"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/foto" />
        <TextView
            android:id="@+id/titulon"
android:layout_toEndOf="@id/imm"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:text="COMPUTADORA HP"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/colorestatusnotificaciones"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_spinner"
            android:backgroundTint="@color/ARED"
            android:src="@drawable/circle"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ubicacionarean"
            android:textColor="@color/black"
            android:text="Ubicacion/area"
            android:layout_toEndOf="@id/imm"
android:layout_below="@id/titulon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp" />

        <TextView
            android:id="@+id/folion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="453543664"
            android:layout_toEndOf="@id/imm"
android:layout_below="@id/ubicacionarean"
            android:textColor="@color/black"
            android:padding="1dp" />

        <TextView
            android:id="@+id/fechan"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/colorestatusnotificaciones"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/foto"
            android:text="12 Junio 2012"
            android:textAlignment="center"

            android:textColor="#FF5722" />
        <TextView
            android:id="@+id/mensajen"
            android:text="El articulo no a llegado dfdsfds sdfdsfdsf sdfdsfds dsfdsfds sdfds"
android:lines="3"
            android:layout_toEndOf="@id/imm"
            android:layout_below="@id/folion"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:padding="1dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
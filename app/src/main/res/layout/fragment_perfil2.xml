<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AgregarProducto"
    android:background="@color/white"
    >
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
 >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <ImageView
        android:id="@+id/foton"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/foto"/>
            <TextView
                android:id="@+id/circulored"
                android:layout_width="30dp"
                android:layout_height="30dp"
android:layout_alignParentRight="true"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/ARED"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/circlered"/>
    <TextView
        android:id="@+id/nombren"
        android:layout_below="@id/foton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nombre"
android:layout_marginLeft="20dp"
        android:textColor="@color/atex"
        />
            <EditText
                android:id="@+id/enombren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="14dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:textColorHighlight="@color/black"
                android:layout_marginLeft="20dp"
                android:inputType="text"
android:layout_below="@+id/nombren"             />

            <TextView
                android:id="@+id/descripn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Descripcion"
                android:layout_below="@+id/enombren"
                android:textColor="@color/atex"
                />
            <EditText
                android:textSize="14dp"
                android:id="@+id/edescripn"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:ems="7"
                android:backgroundTint="@color/black"
                android:textColorHighlight="@color/black"
                android:inputType="text"
                android:textColor="@color/black"
android:layout_marginLeft="20dp"
                android:layout_below="@+id/descripn"
                app:layout_constraintStart_toStartOf="@id/descripn"
                />

            <TextView
                android:id="@+id/fabricanten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Provedor"

                android:textColor="@color/atex"
            android:layout_below="@+id/edescripn"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/l1"
    android:layout_below="@id/fabricanten"
    android:weightSum="7">
            <EditText
                android:id="@+id/efabricanten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fabricanten"
                android:layout_marginStart="20dp"
                android:layout_weight="6"
                android:enabled="false"
                android:ems="10"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:textColorHighlight="@color/black"
                android:textSize="14dp" />

    <ImageButton
        android:id="@+id/selectprovedor"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/next">

    </ImageButton>

</LinearLayout>

            <TextView
                android:id="@+id/serie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Serie"

                android:textColor="@color/atex"
                android:layout_below="@+id/l1"
                />

            <EditText
                android:id="@+id/eserie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:textColorHighlight="@color/black"
                android:ems="10"
                android:textSize="14dp"
                android:inputType="text"
                android:layout_below="@id/serie"/>

            <TextView
                android:id="@+id/modelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Modelo"

                android:textColor="@color/atex"
                android:layout_below="@+id/eserie"
                />

            <EditText
                android:id="@+id/emodelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:textColorHighlight="@color/black"
                android:ems="10"
                android:textSize="14dp"
                android:inputType="text"
                android:layout_below="@id/modelo"/>


            <TextView
                android:id="@+id/facturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Factura"

                android:textColor="@color/atex"
                android:layout_below="@+id/emodelo"
                />

            <EditText
                android:id="@+id/efactuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:textColorHighlight="@color/black"
                android:ems="10"
                android:textSize="14dp"
                android:inputType="text"
                android:layout_below="@id/facturan"/>


            <TextView
                android:id="@+id/categorian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Clase"

                android:textColor="@color/atex"
                android:layout_below="@+id/efactuan"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l3"
                android:layout_below="@id/categorian"
                android:weightSum="7">
            <EditText
                android:id="@+id/ecategorian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/codigon"
                android:layout_marginStart="20dp"
                android:layout_weight="6"
                android:enabled="false"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textSize="14dp"
            />
                <ImageButton
                    android:id="@+id/btnclase"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"/>
            </LinearLayout>

            <TextView
                android:id="@+id/ubicacionn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Ubicacion"

                android:textColor="@color/atex"
                android:layout_below="@+id/l3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l0"
                android:layout_below="@id/ubicacionn"
                android:weightSum="7">
            <EditText
                android:id="@+id/eubicacionn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColorHighlight="@color/black"
                android:backgroundTint="@color/black"
                android:ems="10"
android:layout_weight="6"
                android:textColor="@color/black"
                android:enabled="false"
                android:textSize="14dp"
                android:inputType="text"
                android:layout_below="@id/ubicacionn"/>
                <ImageButton
                    android:id="@+id/btnubicacion"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tcostos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Centro de costos"

                android:textColor="@color/atex"
                android:layout_below="@+id/l0"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l4"
                android:layout_below="@id/tcostos"
                android:weightSum="7">
            <EditText
                android:id="@+id/centrocostosn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginStart="20dp"
                android:textColorHighlight="@color/black"
                android:backgroundTint="@color/black"
                android:textColor="@color/black"
                android:enabled="false"
                android:ems="10"
                android:textSize="14dp"
                android:inputType="text"
                android:layout_below="@id/tcostos"/>
                <ImageButton
                    android:id="@+id/btncentro"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tunidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Unidad Media"

                android:textColor="@color/atex"
                android:layout_below="@+id/l4"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l5"
                android:layout_below="@id/tunidad"
                android:weightSum="7">
            <EditText
                android:id="@+id/unidadn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColorHighlight="@color/black"
                android:textColor="@color/black"
                android:enabled="false"

                android:layout_weight="6"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:textSize="14dp"
                android:inputType="text"
                android:layout_below="@id/tunidad"/>
                <ImageButton
                    android:id="@+id/btnunidad"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l1l"
                android:weightSum="2"
                android:layout_below="@id/l5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tdias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:textAlignment="center"
                    android:text="Cada cuantos días se da el mantenimiento"
                    android:lines="2"
android:layout_weight="1"
                    android:textColor="@color/atex"
                    />

                <TextView
                    android:id="@+id/taviso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:textAlignment="center"
                    android:text="Avisar antes de la fecha de mantenimiento."
android:layout_weight="1"
                    android:textColor="@color/atex"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l2n"
                android:weightSum="2"
                android:layout_below="@id/l1l"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/diasnm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"

                    android:textColorHighlight="@color/black"
                    android:backgroundTint="@color/black"
                    android:textSize="14dp"
                    android:inputType="number"
                    />
                <EditText
                    android:id="@+id/avisonm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"

                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:textColorHighlight="@color/black"
                    android:backgroundTint="@color/black"
                    android:textSize="14dp"
                    android:inputType="number"
                 />

            </LinearLayout>
            <CheckBox
                android:id="@+id/checkBoxa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@id/l2n"
                android:textColor="@color/atex"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/atex"
                android:buttonTint="@color/atex"
                android:text="Notificar cuando disminuya la cantidad." />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/checkBoxa"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:background="@color/afond" />
            <TextView
                android:id="@+id/cantidadn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:text="Cantidad:"
                android:textSize="14dp"
                android:textColor="@color/atex"
                android:layout_below="@+id/checkBoxa"
                />

            <EditText
                android:id="@+id/ecantidadn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="1"
                android:ems="10"
                android:textColorHighlight="@color/black"
                android:backgroundTint="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:inputType="text"

                android:layout_below="@id/cantidadn"/>

            <TextView
                android:id="@+id/st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Stock minímo:"
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/atex"
                android:layout_below="@+id/ecantidadn"
                />

            <EditText
                android:id="@+id/stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="1"
                android:ems="10"

                android:textSize="14dp"
                android:inputType="text"
                android:textColorHighlight="@color/black"
                android:backgroundTint="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/st"/>

            <TextView
                android:id="@+id/coston"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:text="Costo:"
                android:textSize="14dp"
                android:textColor="@color/atex"
                android:layout_below="@+id/stock"
                />

            <EditText
                android:id="@+id/ecoston"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coston"
                android:textColorHighlight="@color/black"
                android:backgroundTint="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="1.00"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notasn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Nota:"
                android:textSize="14dp"
                android:textColor="@color/atex"
                android:layout_below="@+id/ecoston"
                />

            <EditText
                android:id="@+id/enotasn"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:inputType="text"
android:layout_marginLeft="20dp"
                android:layout_below="@id/notasn"/>

            <Button
                android:id="@+id/btnarticulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Crear"

                style="@style/btnred"
                android:layout_below="@+id/enotasn" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>